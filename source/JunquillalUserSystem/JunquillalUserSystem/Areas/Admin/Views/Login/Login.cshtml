@{
    ViewData["Title"] = "Login";
}

<head>
    <meta http-equiv="content-type" content="text/html" ; charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <script defer src="~/js/login.js"></script>
</head>
<body>
    <div class="contenido">
        <div style="background-color: rgba(101,184,82,0.8)">
            <div>
                <h2> Bienvenido a la seccion de inicio de sesion </h2>
                <h3>Por favor introduzca sus credenciales de usuario</h3>
            </div>
            <div class="login">
                <form id="infoUsuario" @Url.Action("Login","Login") method="POST">
                    <div class="Usuario" id="divUsuario">

                        <label for="Usuario"> ID: </label>
                        <br>

                        <input placeholder="Introduzca su ID" type="text" id="usuario" name="ID" maxlength="9" />
                        <p class="datoError" id="usuarioError"></p>
                    </div>

                    <div class="contra" id="divContrasena">

                        <label for=»contrasena»> Contraseña: </label>
                        <br>

                        <input type="password" id="contrasena" name="Contrasena">
                        <p class="datoError" id="contraError"></p>
                    </div>
                </form>
                <br>
                <button id="botonContinuar" class="botonContinuar" type="button">Iniciar Sesion</button>
            </div>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="advertencia">
                    @ViewData["Mensaje"]
                </div>
            }
        </div>
    </div>
</body>