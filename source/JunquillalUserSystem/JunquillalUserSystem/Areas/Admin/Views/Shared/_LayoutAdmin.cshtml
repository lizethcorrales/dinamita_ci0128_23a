<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JunquillalUserSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JunquillalUserSystem.styles.css" asp-append-version="true" />
    <link href="~/lib/jquery-ui-1.12.1.custom/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/styleReservacion.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout_Admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.15.3/css/all.css" integrity="tu-integridad" crossorigin="anonymous" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-purple border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "navbar-brand text-black " : "navbar-brand text-white")" href="@Url.Action("Index","Home" , new { area = "Admin" })">Inicio</a>
                        </li>

                        <li class="nav-item submenu">
                            <a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Reservacion" ? "navbar-brand text-black " : "navbar-brand text-white")" href="#">Reservar <i class="fas fa-chevron-down"></i></a>
                            <ul class="nav-item submenu-content">
                                <li><a href="@Url.Action("FormularioCantidadPersonas","Reservacion" , new { area = "" })">Camping</a></li>
                                <li><a href="@Url.Action("FormularioCantidadPersonas","Visita" , new { area = "" })">Picnic</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "CamposDisponibles" ? "navbar-brand text-black " : "navbar-brand text-white")" href="@Url.Action("CamposDisponibles","CamposDisponibles" , new { area = "" })">Campos Disponibles</a>
                        </li>

                        <li class="nav-item">
                            <a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "AdministrarReservas" ? "navbar-brand text-black " : "navbar-brand text-white")" href="@Url.Action("Reservas","AdministrarReservas" , new { area = "Admin" })">Administrar Reservas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted"  style=" color: #fff background-color: #8e44ad;">
        <div class="container" style="color: #fff;">
            &copy; 2023 - JunquillalUserSystem   
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>